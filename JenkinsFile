pipeline {
    agent any

    environment {
        DOCKER_WRAPPER = '/usr/local/bin/jenkins-docker'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', credentialsId: 'your-credentials-id', url: 'https://github.com/parameshwarbhat411/DE_Pipeline.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                script {
                    docker.image('python:3.10').inside {
                        sh "${DOCKER_WRAPPER} pull python:3.10"
                        sh 'pip install -r requirements.txt'  // Ensure the path to requirements.txt is correct
                    }
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    docker.image('python:3.10').inside {
                        sh "${DOCKER_WRAPPER} pull python:3.10"
                        sh 'python -m unittest discover -s scripts'  // Ensure the path to your tests is correct
                    }
                }
            }
        }

        stage('Run ETL') {
            steps {
                script {
                    docker.image('python:3.10').inside {
                        sh "${DOCKER_WRAPPER} pull python:3.10"
                        sh 'python scripts/etl.py'  // Ensure the path to your ETL script is correct
                    }
                }
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: '**/*.csv', allowEmptyArchive: true
        }
    }
}
