pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', credentialsId: "parameshwarbhat411", url: 'https://github.com/parameshwarbhat411/DE_Pipeline.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                script {
                    docker.image('python:3.10').inside {
                        sh 'pip install -r scripts/requirements.txt'
                    }
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {  // Corrected 'scripts' to 'script'
                    docker.image('python:3.10').inside {
                        sh 'python -m unittest discover -s scripts'
                    }
                }
            }
        }

        stage('Run ETL') {
            steps {
                script {  // Corrected 'scripts' to 'script'
                    docker.image('python:3.10').inside {
                        sh 'python scripts/etl.py'  // Added .py extension assuming it's a Python script
                    }
                }
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: '**/*.csv', allowEmptyArchive: true
        }
    }
}